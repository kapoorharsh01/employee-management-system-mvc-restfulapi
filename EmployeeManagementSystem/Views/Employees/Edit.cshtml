@model Employee

<div class="container mt-4">

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit Employee</h2>
                </div>
                @* <div style="background: yellow; padding: 10px; margin: 10px;">
                    <h3>DEBUG INFO:</h3>
                    <p>EmployeeId: @Model.EmployeeId</p>
                    <p>Name: @Model.Name</p>
                    <p>Department: @Model.Department</p>
                </div> *@

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" maxlength="25" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Department" class="form-label">Department</label>
                            <input asp-for="Department" row="5" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DateOfJoining" class="form-label">Joining Date</label>
                            <input asp-for="DateOfJoining" class="form-control" type="date" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" id="editButton" class="btn btn-primary">Edit</button>
                            <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            const form = document.querySelector("form");
            const button = document.getElementById("editButton");

            // Disable button initially
            button.disabled = true;

            // Enable button when user changes anything in the form
            form.addEventListener("input", () => {
                button.disabled = false;
            });

        });

    </script>

}