@model PagedResult<Employee>

<h1 class="text-center m-5">All Employees</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" id="successAlert">
        @TempData["Success"]
    </div>
}

<div class="table-responsive card-body">

    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>

                    <a asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-sortColumn="name"
                       asp-route-sortDirection="@(ViewBag.SortDirection == "asc" ? "desc" : "asc")"
                       class="text-dark text-decoration-none">
                        Name
                        @if (ViewBag.SortColumn == "name")
                        {
                            @if (ViewBag.SortDirection == "asc")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5" />
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1" />
                                </svg>

                            }
                        }

                    </a>

                </th>
                <th>

                    <a asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-sortColumn="department"
                       asp-route-sortDirection="@(ViewBag.SortDirection == "asc" ? "desc" : "asc")"
                       class="text-dark text-decoration-none">
                        Department
                        @if (ViewBag.SortColumn == "department")
                        {
                            @if (ViewBag.SortDirection == "asc")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5" />
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1" />
                                </svg>

                            }
                        }
                    </a>
                </th>
                <th>

                    <a asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-sortColumn="email"
                       asp-route-sortDirection="@(ViewBag.SortDirection == "asc" ? "desc" : "asc")"
                       class="text-dark text-decoration-none">
                        Email
                        @if (ViewBag.SortColumn == "email")
                        {
                            @if (ViewBag.SortDirection == "asc")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5" />
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1" />
                                </svg>

                            }
                        }
                    </a>
                </th>
                <th>

                    <a asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-sortColumn="dateOfJoining"
                       asp-route-sortDirection="@(ViewBag.SortDirection == "asc" ? "desc" : "asc")"
                       class="text-dark text-decoration-none">
                        Joining Date
                        @if (ViewBag.SortColumn == "dateOfJoining")
                        {
                            @if (ViewBag.SortDirection == "asc")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5" />
                                </svg>
                            }
                            else

                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1" />
                                </svg>
                            }
                        }
                    </a>
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr id="employee-@employee.EmployeeId">
                    <td> @employee.Name </td>
                    <td> @employee.Department </td>
                    <td> @employee.Email </td>
                    <td> @employee.DateOfJoining.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg>
                            Edit
                        </a>
                        <button onclick="deleteEmployee(@employee.EmployeeId)" class="btn btn-sm btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    <div class="text-muted mb-2">
        Page @ViewBag.PageNumber of @Model.TotalPages
    </div>
    <nav aria-label="Page navigation">

        <ul class="pagination mb-0">
            @{
                int currentPage = ViewBag.PageNumber;
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(Model.TotalPages, currentPage + 2);
            }

            @* @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-pageNumber="@(currentPage - 1)"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortColumn="@ViewBag.SortColumn"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        «
                    </a>
                </li>
            } *@

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortColumn="@ViewBag.SortColumn"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        @i
                    </a>
                </li>
            }

            @if (currentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-pageNumber="@(currentPage + 1)"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortColumn="@ViewBag.SortColumn"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        »
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {

    <script>
        function deleteEmployee(id){
            if(confirm("Really want to delete this Employee : " + id)){
                $.ajax({
                    url:"@Url.Action("Delete", "Employees")/" + id,
                    type:"DELETE",
                    success: function(result){
                         $("#employee-" + id).remove();
                    },
                    error: function(err){
                        alert("An error occurred while deleting.");
                    }
                })
            }
        }

        setTimeout(() => {
            const alert = document.getElementById("successAlert");
            if (alert) {
                alert.style.transition = "0.5s";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 2000);
    </script>
}